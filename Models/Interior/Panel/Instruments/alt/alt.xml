<?xml version="1.0" encoding="ISO-8859-1"?> 

<!-- Based on HCI Lab - University of Udin work

     Updated BARANGER Emmanuel June 2015
-->
<PropertyList>

  <path>alt.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>bouton</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>roue1</object-name>
    <object-name>roue2</object-name>
    <object-name>roue3</object-name>
    <object-name>roue4</object-name>
    <object-name>DF</object-name>
    <object-name>MF</object-name>
    <object-name>CF</object-name>
    
    <object-name>inhg.up</object-name>
    <object-name>inhg.dn</object-name>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Fiat-G91R4/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>roue1</object-name>
    <object-name>roue2</object-name>
    <object-name>roue3</object-name>
    <object-name>roue4</object-name>
    <object-name>DF</object-name>
    <object-name>MF</object-name>
    <object-name>CF</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor>0.36</factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>CF</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor> 0.001 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>MF</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor> 0.0001 </factor>
    <step> 1000 </step>
    <scroll> 100 </scroll>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>DF</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor> 0.00001 </factor>
    <step> 10000 </step>
    <scroll> 100 </scroll>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <!-- Pressure in millibar -->
  <animation>
    <type>rotate</type>
    <object-name>roue1</object-name>
    <property>/instrumentation/altimeter/millibar/unit1</property>
    <factor> 36 </factor>
    <center>
      <x-m> -0.01070 </x-m>
      <y-m>  0.01497 </y-m>
      <z-m> -0.01344 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>roue2</object-name>
    <property>/instrumentation/altimeter/millibar/unit10</property>
    <factor> 36 </factor>
    <center>
      <x-m> -0.01070 </x-m>
      <y-m>  0.01104 </y-m>
      <z-m> -0.01344 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>roue3</object-name>
    <property>/instrumentation/altimeter/millibar/unit100</property>
    <factor> 36 </factor>
    <center>
      <x-m> -0.01070 </x-m>
      <y-m>  0.00716 </y-m>
      <z-m> -0.01344 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>roue4</object-name>
    <property>/instrumentation/altimeter/millibar/unit1000</property>
    <factor> 36 </factor>
    <center>
      <x-m> -0.01070 </x-m>
      <y-m>  0.00323 </y-m>
      <z-m> -0.01344 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>inhg.dn</object-name>
    <visible>0</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/altimeter/setting-inhg</property>
        <step>-0.01</step>
        <min>27.90</min>
        <max>31.40</max>
        <wrap>0</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>inhg.dn</object-name>
    <visible>0</visible>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/altimeter/setting-inhg</property>
        <step>-0.1</step>
        <min>27.90</min>
        <max>31.40</max>
        <wrap>0</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>inhg.up</object-name>
    <visible>0</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/altimeter/setting-inhg</property>
        <step>0.01</step>
        <min>27.90</min>
        <max>31.40</max>
        <wrap>0</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>inhg.up</object-name>
    <visible>0</visible>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/altimeter/setting-inhg</property>
        <step>0.1</step>
        <min>27.90</min>
        <max>31.40</max>
        <wrap>0</wrap>
      </binding>
    </action>
  </animation>

</PropertyList>

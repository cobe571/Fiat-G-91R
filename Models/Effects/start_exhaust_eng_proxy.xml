<?xml version="1.0"?>

<PropertyList>
  
  <particlesystem>
    <name>startup</name>
    <texture>spray.png</texture>
    <emissive type="bool">false</emissive>
    <lighting type="bool">false</lighting>
    
    <condition>
      <property>/controls/engines/engine/starter</property>
    </condition>
    
    <attach>world</attach>
    
    <placer>
      <type>point</type>
    </placer>
    
    <shooter>
      <theta-min-deg>75</theta-min-deg>
      <theta-max-deg>95</theta-max-deg>
      <phi-min-deg>325</phi-min-deg>
      <phi-max-deg>335</phi-max-deg>
      <speed-mps>
	<value>3</value>
	<spread>1</spread>
      </speed-mps>
      <rotation-speed>
	<x-max-deg-sec>20</x-max-deg-sec>
	<x-min-deg-sec>-20</x-min-deg-sec>
	<y-max-deg-sec>20</y-max-deg-sec>
	<y-min-deg-sec>-20</y-min-deg-sec>
	<z-max-deg-sec>20</z-max-deg-sec>
	<z-min-deg-sec>-20</z-min-deg-sec>
      </rotation-speed>
    </shooter>
    
    <counter>
      <particles-per-sec>
	<value>10000</value>
	<spread>500</spread>
      </particles-per-sec>
    </counter>
    
    <align>billboard</align>
    
    <particle>
      <start>
	<color>
	  <red>
	    <value>0.3</value>
	  </red>
	  <green>
	    <value>0.3</value>
	  </green>
	  <blue>
	    <value>0.3</value>
	  </blue>
	  <alpha>
	    <value>0.06</value>
	  </alpha>
	</color>
	<size>
	  <value>0.01</value>
	</size>
      </start>
      <end>
	<color>
	  <red>
	    <value>0.7</value>
	  </red>
	  <green>
	    <value>0.7</value>
	  </green>
	  <blue>
	    <value>0.7</value>
	  </blue>
	  <alpha>
	    <value>0.001</value>
	  </alpha>
	</color>
	<size>
	  <value>1</value>
	</size>
      </end>
      <life-sec>
	<value>2</value>
      </life-sec>
      <mass-kg>5</mass-kg>
      <radius-m>1</radius-m>
    </particle>
    
    <program>
      <fluid>air</fluid>
      <gravity>true</gravity>
      <wind>true</wind>
    </program>
    
  </particlesystem>
  
</PropertyList>
